<div class="mb-2 d-flex justify-content-between align-items-center">
	<h1>All Spots</h1>
	<a href="/spots/new" class="card-link generic_link">✚ New Spot</a>
</div>
{{#each spots}}
	<div class="card mb-3">
		<div class="row">
			<div class="col-md-4">
				<a href="/spots/{{this.slug}}/{{this._id}}"><img
						src="{{images.0.url}}"
						alt="spot image"
						class="img-fluid"
					/></a>
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title card_title__link"><a
							href="/spots/{{this.slug}}/{{this._id}}"
						>{{capitalizeFirstLetters name}}</a></h5>
					<p class="card-text">{{capitalizeFirstLetter description}}</p>
					<p class="card-text"><small
							class="text-muted"
						>{{capitalizeFirstLetters location}}</small></p>
					<a class="generic_link" href="/spots/{{this.slug}}/{{this._id}}"><span
							class="symbol"
						><b>⌕</b></span>
						View Spot</a>
				</div>
			</div>
		</div>
	</div>
{{/each}}