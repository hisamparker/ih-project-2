<h1>All Spots</h1>
<div class="mb-2">
	<a href="/spots/new" class="card-link btn btn-info">Add New Spot</a>
</div>
{{#each spots}}
	<div class="card mb-3">
		<div class="row">
			<div class="col-md-4">
				<img src="{{images.0.url}}" alt="spot image" class="img-fluid" />
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">{{capitalizeFirstLetters name}}</h5>
					<p class="card-text">{{capitalizeFirstLetter description}}</p>
					<p class="card-text"><small
							class="text-muted"
						>{{capitalizeFirstLetters location}}</small></p>
					<a
						class="btn btn-outline-primary"
						href="/spots/{{this.slug}}/{{this._id}}"
					>View Spot</a>
				</div>
			</div>
		</div>
	</div>
{{/each}}